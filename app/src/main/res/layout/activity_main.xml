<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppLayout">
  <Button
      android:id="@+id/in_menu_button"
      android:text="@string/in_menu"
      style="@style/MenuButton" />
  <Button
      android:id="@+id/dl_reader_button"
      android:text="@string/dl_reader"
      style="@style/MenuButton" />
  <Button
      android:id="@+id/ep_reader_button"
      android:text="@string/ep_reader"
      style="@style/MenuButton" />
  <Button
      android:id="@+id/pinstatus_button"
      android:text="@string/pinstatus"
      style="@style/MenuButton" />
  <ScrollView
      android:id="@+id/scroll"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginTop="8dp">
    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp" />
  </ScrollView>
</LinearLayout>
