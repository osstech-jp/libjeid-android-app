<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppLayout">
  <TextView
      android:id="@+id/info"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="カードをタッチしてテスト開始。"
      android:textSize="20sp" />
  <TextView
      android:id="@+id/text_jpki_auth_pin"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="JPKI認証用PINと券面PIN(4桁)"
      android:textSize="20sp" />
  <EditText
      android:id="@+id/edit_jpki_auth_pin"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:textSize="20sp"
      android:inputType="numberPassword"
      android:maxLength="4"
      android:hint="@null"
      android:importantForAutofill="no"
      tools:targetApi="o" />
  <TextView
      android:id="@+id/text_jpki_sign_pin"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="JPKI署名用PIN(6-16桁)"
      android:textSize="20sp" />
  <EditText
      android:id="@+id/edit_jpki_sign_pin"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:textSize="20sp"
      android:inputType="textPassword"
      android:maxLength="16"
      android:hint="@null"
      android:importantForAutofill="no"
      tools:targetApi="o" />
  <ScrollView
      android:id="@+id/scroll"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginTop="8dp">
    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp" />
  </ScrollView>
</LinearLayout>

